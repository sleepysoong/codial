# Core service runtime
CORE_HOST=0.0.0.0
CORE_PORT=8081
CORE_API_TOKEN=dev-core-token
CORE_GATEWAY_BASE_URL=http://localhost:8080
CORE_GATEWAY_INTERNAL_TOKEN=dev-internal-token
CORE_REQUEST_TIMEOUT_SECONDS=10
CORE_TURN_WORKER_COUNT=2

# Provider policy (확장 가능 구조, 기본은 Copilot만 사용)
CORE_DEFAULT_PROVIDER_NAME=github-copilot-sdk
CORE_ENABLED_PROVIDER_NAMES=github-copilot-sdk

# GitHub Copilot SDK bridge
CORE_COPILOT_BRIDGE_BASE_URL=http://localhost:8092
CORE_COPILOT_BRIDGE_TOKEN=
CORE_COPILOT_AUTO_LOGIN_ENABLED=true
CORE_COPILOT_AUTH_CACHE_PATH=.runtime/copilot-auth.json
CORE_COPILOT_LOGIN_ENDPOINT=/v1/auth/login
CORE_PROVIDER_BRIDGE_TIMEOUT_SECONDS=30

# Optional providers (필요할 때만 활성화)
CORE_OPENAI_API_KEY=
CORE_OPENAI_REQUEST_TIMEOUT_SECONDS=45
CORE_CODEX_BRIDGE_BASE_URL=
CORE_CODEX_BRIDGE_TOKEN=

# MCP optional
CORE_MCP_SERVER_URL=
CORE_MCP_SERVER_TOKEN=
CORE_MCP_REQUEST_TIMEOUT_SECONDS=15

# Attachments
CORE_ATTACHMENT_DOWNLOAD_ENABLED=false
CORE_ATTACHMENT_DOWNLOAD_MAX_BYTES=10000000
CORE_ATTACHMENT_STORAGE_DIR=.runtime/attachments

# Workspace root for RULES/AGENTS/skills lookup
CORE_WORKSPACE_ROOT=..
